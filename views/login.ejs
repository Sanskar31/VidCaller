<%- include('./includes/header.ejs') %>
</head>
<body>
   <%- include('./includes/nav.ejs') %>
   <main class="container bd- main pt-6">
      <div class="columns">
         <div class="column"></div>
         <div class="column is-three-quarters">
            <div class="card">
               <div class="card-content">
                  <div class="columns">
                     <div class="column">
                        <p class="title">
                           Log In
                        </p>
                        <%- include('./partials/login-messages') %>
                        <form action="/user/login" method="post">
                        <div class="field">
                           <label class="label">Email</label>
                           <div class="control has-icons-left has-icons-right">
                              <input class="input" type="email" placeholder="Email input" name="email">
                              <span class="icon is-small is-left">
                              <i class="fas fa-envelope"></i>
                              </span>
                           </div>
                        </div>
                        <div class="field">
                           <label class="label">Password</label>
                           <p class="control has-icons-left">
                              <input class="input" type="password" placeholder="Password" name="password">
                              <span class="icon is-small is-left">
                              <i class="fas fa-lock"></i>
                              </span>
                           </p>
                        </div>
                        <div class="field">
                           <p class="control">
                              <button class="button is-black mt-3" type="submit">
                              Login
                              </button>
                           </p>
                        </div>
                        </form>
                     </div>
                     <div class="is-divider-vertical" data-content="OR"></div>
                     <div class="column">
                        <p class="title">
                           Sign Up
                        </p>
                        <%- include('./partials/signup-messages') %>
                        <form action="/user/register" method="post">
                        <div class="field">
                           <label class="label">Name</label>
                           <div class="control">
                             <input class="input" type="text" placeholder="e.g Alex Smith" name="name" value="<%= typeof name != 'undefined' ? name : '' %>" required>
                           </div>
                        </div>
                        <div class="field">
                           <label class="label">Enter Email</label>
                           <div class="control has-icons-left has-icons-right">
                              <input class="input" type="email" placeholder="Email input" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" required>
                              <span class="icon is-small is-left">
                              <i class="fas fa-envelope"></i>
                              </span>
                           </div>
                        </div>
                        <div class="field">
                           <label class="label">Enter Password</label>
                           <p class="control has-icons-left">
                              <input class="input" type="password" placeholder="Password" name="password" value="<%= typeof password != 'undefined' ? password : '' %>" required>
                              <span class="icon is-small is-left">
                              <i class="fas fa-lock"></i>
                              </span>
                           </p>
                        </div>
                        <div class="field">
                           <label class="label">Confirm Password</label>
                           <p class="control has-icons-left">
                              <input class="input" type="password" placeholder="Confirm Password" name="confirmPassword" value="<%= typeof confirmPassword!= 'undefined' ? confirmPassword: '' %>" required>
                              <span class="icon is-small is-left">
                              <i class="fas fa-lock"></i>
                              </span>
                           </p>
                        </div>
                        <div class="field">
                           <p class="control">
                              <button class="button is-black mt-3" type="submit">
                              Sign Up
                              </button>
                           </p>
                        </div>
                        </form>
                     </div>
                  </div>
               </div>
            </div>
         </div>
         <div class="column"></div>
      </div>
      </div>
   </main>
   <%- include('./includes/footer.ejs') %>